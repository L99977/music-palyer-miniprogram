/* 头部区域 */
.videoContainer .header {
  display: flex;
  padding: 10rpx;
}

.header image {
  width: 60rpx;
  height: 60rpx;
}

.header .search {
  border: 1px solid #eee;
  color: #d43c33;
  text-align: center;
  line-height: 60rpx;
  margin: 0 20rpx;
  font-size: 26rpx;
  /* 自适应布局 */
  flex: 1;
}

/* 导航区域 */
.navScroll {
  display: flex;
  white-space: nowrap;
  height: 60rpx;
}

.navScroll .navItem {
  padding: 0 30rpx;
  font-size: 28rpx;
  line-height: 60rpx;
}

.navScroll .navContent {
  box-sizing: border-box;
  height: 59rpx;
}

.navItem .actived {
  border-bottom: 1px solid #d43c33;
}


/* 视屏列表区域 */
.videoScroll {
  margin-top: 10rpx;
  /* calc() 可以动态计算小程序的宽高 */
  /* 运算符左右两侧必须加空格，否则会失效 */
  height: calc(100vh - 143.2rpx); 
  /* 设置高度，让视频导航标签固定显示 */
}

.videoItem {
  padding: 0 3%;
}

.videoItem .common {
  width: 100%;
  height: 360rpx;
}

.videoItem .content {
  font-size: 26rpx;
  height: 80rpx;
  line-height: 80rpx;
  max-width: 500rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* footer */
.footer {
  border-top: 1px solid #eee;
  padding: 20rpx 0;
  box-sizing: border-box;
}

.footer .avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
}

.footer .nickName {
  font-size: 26rpx;
  /* vertical-align: middle; */
  margin-left: 20rpx;
}

.footer_right {
  float: right;
}

.footer_right .item {
  position: relative;
  margin-left: 50rpx;
  top: -20rpx;
}

.footer_right .count {
  font-size: 20rpx;
  position: absolute;
  top: -20rpx;
}

.footer_right .btn {
  display: inline;
  padding: 0;
  background-color: transparent;
  border-color: transparent;
}

.footer_right .btn:after {
  border: none;
}